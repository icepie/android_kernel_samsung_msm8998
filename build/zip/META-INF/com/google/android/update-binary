#!/sbin/sh

OUTFD=$2
ZIP=$3
BOOT=/dev/block/platform/soc/1da4000.ufshc/by-name/boot

ui_print() {
  echo -n -e "ui_print $1\n" > /proc/self/fd/$OUTFD
  echo -n -e "ui_print\n" > /proc/self/fd/$OUTFD
}

ui_print " "
ui_print "Preparing environment ..."
ui_print " "

cd /tmp
rm -rf neodev
mkdir neodev
cd neodev
unzip -o "$ZIP"

sleep 0.5

mount /data

ui_print " "
ui_print "Ready To Go ..."
ui_print " "

ui_print ""
ui_print ""
ui_print "                                    "
ui_print "           Neodev Kernel            "
ui_print "                                    "
ui_print "          Samsung MSM8998           "
ui_print "           S8 & S8+ & N8            "
ui_print "                                    "
ui_print "                by                  "
ui_print "           icepie@neodev            "
ui_print " "
ui_print " "


ui_print " "
ui_print "Flashing kernel..."
ui_print " "

cat boot.img > $BOOT

# fix wifi cache
rm -rf /data/vendor/conn
mkdir /data/vendor/conn
chown -R system root /data/vendor/conn/
chmod -R 0666 /data/vendor/conn/
mv data/vendor/conn /data/vendor/

ui_print " "
ui_print "Neodev Kernel flashing finished..."
ui_print " "
ui_print "Enjoy it"
ui_print " "

rm -rf /tmp
sync
